{
  "server": {
    "port": 80,
    "blobCache": true
  },
  "router": {
    "fileRoot": "./src/client",
    "apiRoot": "./src/server/api",
    "routes": [
      { "path": "/", "handler": "file", "content": "/index.html" },
      { "path": "/api/:module/:function", "handler": "module"},
      { "path": "*", "handler": "file" }
    ]
  }
}